<wpml-config>

	<custom-fields>

		<!-- menu -->
		<custom-field action="copy">_menu_item_megamenu</custom-field>			
		<custom-field action="copy">_menu_item_menulinktitle</custom-field>
		<custom-field action="copy">_menu_item_menuwidget</custom-field>

		<!-- pages -->
		<custom-field action="copy">neko_page_preloader</custom-field>
		<custom-field action="copy">neko_overrideheaderoption</custom-field>
		<custom-field action="copy">neko_overrideheaderposition</custom-field>
		<custom-field action="copy">neko_page_header_display</custom-field>
		<custom-field action="copy">neko_post_header_default_title</custom-field>
		<custom-field action="translate">neko_post_header_customtitle</custom-field>
		<custom-field action="translate">neko_post_header_subtitle</custom-field>
		<custom-field action="copy">sbg_selected_sidebar_replacement</custom-field>
		<custom-field action="copy">neko_sidebar_position</custom-field>
		<custom-field action="copy">sbg_selected_sidebar</custom-field>

		<!-- posts -->
		<custom-field action="copy">post_image1_thumbnail_id</custom-field>
		<custom-field action="copy">post_image2_thumbnail_id</custom-field>
		<custom-field action="copy">post_image3_thumbnail_id</custom-field>
		<custom-field action="copy">post_image4_thumbnail_id</custom-field>
		<custom-field action="copy">post_image5_thumbnail_id</custom-field>
		<custom-field action="copy">post_image6_thumbnail_id</custom-field>
		<custom-field action="copy">post_image7_thumbnail_id</custom-field>
		<custom-field action="copy">post_image8_thumbnail_id</custom-field>
		<custom-field action="copy">post_image9_thumbnail_id</custom-field>
		<custom-field action="copy">post_image10_thumbnail_id</custom-field>
	</custom-fields>

	<admin-texts>
		<key name="thsp_cbp_theme_options">
			<key name="copyright_text"/>
			<key name="read_more_text"/>
			<key name="error_404_title"/>
			<key name="error_404_text"/>
		</key>
	</admin-texts>


	<language-switcher-settings>

		<key name="icl_lang_sel_config">
			<key name="font-current-normal">#444444</key>
			<key name="font-current-hover">#000000</key>
			<key name="background-current-normal">#ffffff</key>
			<key name="background-current-hover">#eeeeee</key>
			<key name="font-other-normal">#444444</key>
			<key name="font-other-hover">#000000</key>
			<key name="background-other-normal">#ffffff</key>
			<key name="background-other-hover">#eeeeee</key>
			<key name="border">#cdcdcd</key>
		</key>

		<key name="icl_lang_sel_footer_config">
			<key name="font-current-normal">#444444</key>
			<key name="font-current-hover">#000000</key>
			<key name="background-current-normal">#ffffff</key>
			<key name="background-current-hover">#eeeeee</key>
			<key name="font-other-normal">#444444</key>
			<key name="font-other-hover">#000000</key>
			<key name="background-other-normal">#ffffff</key>
			<key name="background-other-hover">#eeeeee</key>
			<key name="border">#cdcdcd</key>
		</key>

		<key name="icl_language_switcher_sidebar">0</key>
		<key name="icl_widget_title_show">0</key>
		<key name="icl_lang_sel_type">dropdown</key>
		<key name="icl_lso_link_empty">0</key>
		<key name="icl_lso_flags">0</key>
		<key name="icl_lso_native_lang">1</key>
		<key name="icl_lso_display_lang">1</key>
		<key name="icl_lang_sel_footer">0</key>
		<key name="icl_post_availability">0</key>
		<key name="icl_post_availability_position">below</key>
		<key name="icl_post_availability_text">This post is also available in: %s</key>

	</language-switcher-settings>

</wpml-config>